{
  "patterns": {
    "sleep_mood_correlation": {
      "name": "Sleep-Mood Correlation",
      "description": "Strong correlation between sleep duration/quality and next-day mood",
      "detection_criteria": {
        "min_correlation": 0.7,
        "min_data_points": 7,
        "variables": ["sleep_hours", "mood_score"]
      },
      "risk_levels": {
        "low": {
          "sleep_threshold": 7.0,
          "consistency": 0.8,
          "description": "Consistent good sleep patterns"
        },
        "medium": {
          "sleep_threshold": 6.0,
          "consistency": 0.6,
          "description": "Irregular sleep affecting mood"
        },
        "high": {
          "sleep_threshold": 5.0,
          "consistency": 0.4,
          "description": "Chronic sleep deprivation impacting wellbeing"
        }
      },
      "interventions": [
        "Sleep hygiene education",
        "Bedtime routine establishment",
        "Sleep tracking implementation",
        "Referral to sleep specialist if needed"
      ]
    },
    "stress_spiral": {
      "name": "Stress Spiral Pattern",
      "description": "Escalating stress levels with decreasing coping strategies",
      "detection_criteria": {
        "stress_increase_threshold": 2.0,
        "mood_decrease_threshold": -1.0,
        "time_window_days": 7,
        "variables": ["stress_level", "mood_score", "exercise_minutes", "social_interaction"]
      },
      "risk_levels": {
        "low": {
          "stress_level": 3.0,
          "coping_activities": 2,
          "description": "Manageable stress with active coping"
        },
        "medium": {
          "stress_level": 5.0,
          "coping_activities": 1,
          "description": "Elevated stress, reduced coping mechanisms"
        },
        "high": {
          "stress_level": 7.0,
          "coping_activities": 0,
          "description": "High stress with minimal coping strategies"
        }
      },
      "interventions": [
        "Stress management techniques",
        "Cognitive behavioral therapy",
        "Relaxation training",
        "Social support activation"
      ]
    },
    "social_isolation": {
      "name": "Social Isolation Pattern",
      "description": "Decreasing social interaction correlated with mood decline",
      "detection_criteria": {
        "social_threshold": 1.0,
        "mood_correlation": -0.6,
        "duration_days": 5,
        "variables": ["social_interaction", "mood_score", "family_time"]
      },
      "risk_levels": {
        "low": {
          "social_interaction": 2.0,
          "frequency": "daily",
          "description": "Regular social connections maintained"
        },
        "medium": {
          "social_interaction": 1.0,
          "frequency": "few_times_week",
          "description": "Limited but present social engagement"
        },
        "high": {
          "social_interaction": 0.5,
          "frequency": "rarely",
          "description": "Significant social withdrawal"
        }
      },
      "interventions": [
        "Social skills training",
        "Group therapy participation",
        "Community engagement activities",
        "Family therapy if applicable"
      ]
    },
    "exercise_mood_boost": {
      "name": "Exercise-Mood Boost Pattern",
      "description": "Positive correlation between physical activity and mood improvement",
      "detection_criteria": {
        "min_correlation": 0.6,
        "exercise_threshold": 20,
        "mood_improvement": 0.5,
        "variables": ["exercise_minutes", "mood_score", "intensity"]
      },
      "risk_levels": {
        "low": {
          "exercise_minutes": 30,
          "frequency": "daily",
          "description": "Regular exercise routine maintained"
        },
        "medium": {
          "exercise_minutes": 15,
          "frequency": "few_times_week",
          "description": "Inconsistent exercise patterns"
        },
        "high": {
          "exercise_minutes": 5,
          "frequency": "rarely",
          "description": "Sedentary lifestyle impacting mood"
        }
      },
      "interventions": [
        "Gradual exercise program",
        "Activity scheduling",
        "Fitness goal setting",
        "Group exercise classes"
      ]
    },
    "weekend_recovery": {
      "name": "Weekend Recovery Pattern",
      "description": "Consistent mood improvement during weekends vs weekdays",
      "detection_criteria": {
        "weekend_mood_boost": 1.0,
        "weekday_stress": 4.0,
        "consistency": 0.8,
        "variables": ["day_of_week", "mood_score", "work_hours", "stress_level"]
      },
      "risk_levels": {
        "low": {
          "weekday_mood": 4.0,
          "work_stress": 3.0,
          "description": "Good work-life balance maintained"
        },
        "medium": {
          "weekday_mood": 3.0,
          "work_stress": 5.0,
          "description": "Work stress affecting wellbeing"
        },
        "high": {
          "weekday_mood": 2.0,
          "work_stress": 7.0,
          "description": "Severe work-related mood impact"
        }
      },
      "interventions": [
        "Work-life balance coaching",
        "Time management strategies",
        "Workplace stress reduction",
        "Career counseling if needed"
      ]
    },
    "weather_sensitivity": {
      "name": "Weather Sensitivity Pattern",
      "description": "Mood fluctuations correlated with weather conditions",
      "detection_criteria": {
        "weather_correlation": -0.5,
        "seasonal_variation": true,
        "rainy_day_impact": -1.0,
        "variables": ["weather_condition", "mood_score", "season"]
      },
      "risk_levels": {
        "low": {
          "weather_impact": 0.5,
          "coping_strategies": 2,
          "description": "Mild weather sensitivity with coping"
        },
        "medium": {
          "weather_impact": 1.0,
          "coping_strategies": 1,
          "description": "Moderate weather-related mood changes"
        },
        "high": {
          "weather_impact": 2.0,
          "coping_strategies": 0,
          "description": "Significant weather-dependent mood swings"
        }
      },
      "interventions": [
        "Light therapy for seasonal patterns",
        "Indoor activity planning",
        "Vitamin D supplementation",
        "Mindfulness for weather acceptance"
      ]
    },
    "creative_expression": {
      "name": "Creative Expression Pattern",
