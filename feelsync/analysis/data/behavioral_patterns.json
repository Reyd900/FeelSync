  "risk_assessment_criteria": {
    "low_risk": {
      "mood_range": [3.5, 5.0],
      "consistency": "> 0.8",
      "coping_mechanisms": "> 2 active",
      "social_support": "adequate",
      "sleep_quality": "good",
      "monitoring_frequency": "weekly"
    },
    "moderate_risk": {
      "mood_range": [2.5, 3.4],
      "consistency": "0.5 - 0.8",
      "coping_mechanisms": "1-2 active",
      "social_support": "limited",
      "sleep_quality": "fair",
      "monitoring_frequency": "twice_weekly"
    },
    "high_risk": {
      "mood_range": [1.0, 2.4],
      "consistency": "< 0.5",
      "coping_mechanisms": "< 1 active",
      "social_support": "minimal",
      "sleep_quality": "poor",
      "monitoring_frequency": "daily"
    },
    "crisis_risk": {
      "mood_range": [0, 1.0],
      "consistency": "erratic",
      "coping_mechanisms": "none functioning",
      "social_support": "absent",
      "sleep_quality": "severely disrupted",
      "monitoring_frequency": "continuous"
    }
  },
